#!/bin/bash
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Install playwright browsers on first run if needed
if ! uv run --project "$SCRIPT_DIR" --extra login python -c "from playwright.sync_api import sync_playwright" 2>/dev/null; then
    echo "Installing Playwright browsers..."
    uv run --project "$SCRIPT_DIR" --extra login playwright install chromium
fi

exec uv run --project "$SCRIPT_DIR" --extra login "$SCRIPT_DIR/einthusan-login.py" "$@"
